<body>
  <h2>Currently renting</h2>


  <div class="container">
    <% current_user.furnitures.each do |furniture| %>
      <div class="card-product d-flex justify-content-between align-items-center">
        <div>
          <h2><%= furniture.title %></h2>
        </div>
        <div>
          <p><%= furniture.description %></p>
        </div>
        <div>
          <p><%= furniture.price %>€</p>
        </div>
        <div>
          <p><%= furniture.number_items %></p>
        </div>
        <div>
          <p><%= furniture.furniture_type %></p>
        </div>
        <div>
          <p><%= furniture.zipcode %></p>
        </div>
        <div>
        <td><%= link_to 'Details', furniture_path(furniture) %></td>
        <td><%= link_to 'Change plan', edit_furniture_path(furniture) %></td>
        </div>
      </div>
    <% end %>
  </div>





