<div class="container d-flex">
  <div class="background-offer">
    <% @furnitures.each do |furniture| %>
      <div class="card-product d-flex justify-content-around">
        <div>
          <%if furniture.photo.attached?%><%= cl_image_tag furniture.photo.key, crop: :fill %><%end%>
        </div>
        <div>
          <h2><%= furniture.title %></h2>
        </div>
        <div>
          <p><%= furniture.description %></p>
        </div>
        <div>
          <p><%= furniture.price %>â‚¬</p>
        </div>
        <div>
          <p><%= furniture.number_items %></p>
        </div>
        <div>
          <p><%= furniture.furniture_type %></p>
        </div>
        <div>
          <%= link_to "Rent now", new_furniture_booking_path(furniture), class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>

  <div id="map"
    style="width: 100%; height: 820px;"
    data-markers="<%= @markers.to_json %>"
